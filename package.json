{
  "name": "www.elliotjreed.com",
  "version": "2.0.0",
  "description": "www.elliotjreed.com frontend in React",
  "keywords": [
    "react",
    "webpack",
    "typescript"
  ],
  "author": "Elliot J. Reed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elliotjreed/www.elliotjreed.com.git"
  },
  "bugs": {
    "url": "https://github.com/elliotjreed/www.elliotjreed.com/issues"
  },
  "homepage": "http://elliotjreed.github.io/www.elliotjreed.com",
  "scripts": {
    "clean-dist": "rm -rf -d dist",
    "start": "webpack-dev-server --config=webpack.dev.js",
    "build": "yarn run clean-dist && webpack -p --config=webpack.prod.js",
    "docker": "yarn run test && yarn run lint && yarn run clean-dist && webpack -p --config=webpack.prod.js && docker build -t elliotjreed/www.elliotjreed.com . --no-cache && docker push elliotjreed/www.elliotjreed.com",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "lint": "yarn run lint:ts && yarn run lint:css",
    "lint:ts": "eslint './src/**/*.ts*'",
    "lint:css": "stylelint './src/**/*.scss' --syntax scss"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2",
    "@fortawesome/free-brands-svg-icons": "^5.12",
    "@fortawesome/react-fontawesome": "^0.1",
    "bulma": "^0.9",
    "history": "^5.0",
    "marked": "^0.8",
    "react": "^16.13",
    "react-content-loader": "^5.1",
    "react-dom": "^16.13",
    "react-ga": "^3.0",
    "react-helmet": "^6.1",
    "react-router-dom": "^5.2",
    "react-spring": "^8.0",
    "webpack-pwa-manifest": "^4.2",
    "workbox-webpack-plugin": "^5.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10",
    "@types/enzyme-adapter-react-16": "^1.0",
    "@types/jest": "^26.0",
    "@types/node": "^14.0",
    "@types/react": "^16.9",
    "@types/react-dom": "^16.9",
    "@typescript-eslint/eslint-plugin": "^3.4",
    "@typescript-eslint/parser": "^3.4",
    "awesome-typescript-loader": "^5.2",
    "copy-webpack-plugin": "^6.0",
    "css-loader": "^3.6",
    "enzyme": "^3.11",
    "enzyme-adapter-react-16": "^1.15",
    "eslint": "^7.3",
    "eslint-config-prettier": "^6.11",
    "eslint-plugin-prettier": "^3.1",
    "eslint-plugin-react": "^7.20",
    "file-loader": "^6.0",
    "html-webpack-plugin": "^4.3",
    "jest": "^26.1",
    "jest-enzyme": "^7.1",
    "jest-fetch-mock": "^3.0",
    "mini-css-extract-plugin": "^0.9",
    "node-sass": "^4.14",
    "prettier": "^2.0",
    "purgecss-webpack-plugin": "^2.3",
    "react-hot-loader": "^4.12",
    "sass-loader": "^8.0",
    "style-loader": "^1.2",
    "stylelint": "^13.6",
    "stylelint-config-recommended-scss": "^4.2",
    "stylelint-config-standard": "^20.0",
    "stylelint-scss": "^3.18",
    "terser-webpack-plugin": "^3.0",
    "ts-jest": "^26.1",
    "typescript": "^3.9",
    "webpack": "^4.43",
    "webpack-cli": "^3.3",
    "webpack-dev-middleware": "^3.7",
    "webpack-dev-server": "^3.11",
    "webpack-merge": "^4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/tests/stylesMock.ts"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/node_modules/jest-enzyme/lib/index.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setupJest.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!tests/**/*.test.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text"
    ],
    "resetModules": true,
    "restoreMocks": true
  }
}
