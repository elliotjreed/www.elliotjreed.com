{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2022"
    ]
  },
  "include": [
    "./src/components/**/*.tsx"
  ],
  "types": [
    "typePatches"
  ]
}
