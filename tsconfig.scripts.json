{
  "include": ["src/scripts/**/*"],
  "exclude": ["src/data/**/*", "src/interfaces/**/*"],
  "compilerOptions": {
    "lib": [
      "dom",
      "es2022"
    ],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  }
}
