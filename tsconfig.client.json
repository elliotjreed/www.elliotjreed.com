{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "outDir": "./dist/static",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "./src/components/**/*.tsx"
  ],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
