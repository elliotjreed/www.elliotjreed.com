{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "outDir": "./dist/static",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2020",
      "es2022"
    ]
  },
  "include": [
    "./src/components/**/*.tsx"
  ],
  "types": [
    "typePatches"
  ]
}
