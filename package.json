{
  "name": "www.elliotjreed.com",
  "version": "1.0.0",
  "description": "www.elliotjreed.com frontend in React",
  "keywords": [
    "react",
    "webpack",
    "typescript"
  ],
  "author": "Elliot J. Reed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elliotjreed/www.elliotjreed.com.git"
  },
  "bugs": {
    "url": "https://github.com/elliotjreed/www.elliotjreed.com/issues"
  },
  "homepage": "http://elliotjreed.github.io/www.elliotjreed.com",
  "scripts": {
    "clean-dist": "rm -rf -d dist",
    "start": "webpack-dev-server --config=webpack.dev.js",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "build": "yarn run clean-dist && webpack -p --config=webpack.prod.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "lint": "yarn run lint:ts && yarn run lint:css",
    "lint:ts": "eslint './src/**/*.ts*'",
    "lint:css": "stylelint './src/**/*.scss' --syntax scss"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1",
    "@fortawesome/free-brands-svg-icons": "^5",
    "@fortawesome/react-fontawesome": "^0",
    "bulma": "^0",
    "history": "^4",
    "marked": "^0",
    "react": "^16",
    "react-dom": "^16",
    "react-ga": "^2",
    "react-helmet": "^5",
    "react-router-dom": "^5",
    "webpack-pwa-manifest": "^4",
    "workbox-webpack-plugin": "^4"
  },
  "devDependencies": {
    "@babel/cli": "^7",
    "@babel/core": "^7",
    "@babel/preset-env": "^7",
    "@babel/preset-react": "^7",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1",
    "@types/jest": "^24",
    "@types/node": "^12",
    "@types/react": "^16",
    "@types/react-dom": "^16",
    "@typescript-eslint/eslint-plugin": "^2",
    "@typescript-eslint/parser": "^2",
    "awesome-typescript-loader": "^5",
    "babel-jest": "^24",
    "babel-loader": "^8",
    "copy-webpack-plugin": "^5",
    "css-loader": "^3",
    "enzyme": "^3",
    "enzyme-adapter-react-16": "^1",
    "eslint": "^6",
    "eslint-config-prettier": "^6",
    "eslint-plugin-prettier": "^3",
    "eslint-plugin-react": "^7",
    "file-loader": "^5",
    "gh-pages": "^2.1.1",
    "html-webpack-plugin": "^3",
    "image-webpack-loader": "^6",
    "jest": "^24",
    "jest-enzyme": "^7",
    "jest-fetch-mock": "^2",
    "mini-css-extract-plugin": "^0",
    "node-sass": "^4",
    "prettier": "^1",
    "purgecss-webpack-plugin": "^1",
    "react-hot-loader": "^4",
    "sass-loader": "^8",
    "style-loader": "^1",
    "stylelint": "^12",
    "stylelint-config-recommended-scss": "^4",
    "stylelint-config-standard": "^19",
    "stylelint-scss": "^3",
    "terser-webpack-plugin": "^2",
    "ts-jest": "^24",
    "typescript": "^3",
    "webpack": "^4",
    "webpack-cli": "^3",
    "webpack-dev-middleware": "^3",
    "webpack-dev-server": "^3",
    "webpack-merge": "^4"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/tests/stylesMock.js",
      "\\.(svg)$": "<rootDir>/tests/svgMock.js"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/node_modules/jest-enzyme/lib/index.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setupJest.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!tests/**/*.test.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text"
    ],
    "resetModules": true,
    "restoreMocks": true
  }
}
