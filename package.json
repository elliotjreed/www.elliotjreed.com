{
  "name": "www.elliotjreed.com",
  "version": "2.0.0",
  "description": "www.elliotjreed.com frontend in React",
  "keywords": [
    "react",
    "webpack",
    "typescript"
  ],
  "author": "Elliot J. Reed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elliotjreed/www.elliotjreed.com.git"
  },
  "bugs": {
    "url": "https://github.com/elliotjreed/www.elliotjreed.com/issues"
  },
  "homepage": "https://www.elliotjreed.com",
  "scripts": {
    "clean-dist": "rm -rf -d dist",
    "start": "webpack serve --mode development --env development --config=webpack.dev.js",
    "build": "yarn run clean-dist && webpack --config=webpack.prod.js --mode production --env production",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:js": "eslint --ext .ts --ext .js --ext .tsx './src/'",
    "lint:css": "stylelint './src/**/*.scss'",
    "test": "jest",
    "docker": "yarn run lint && yarn run clean-dist && webpack --config=webpack.prod.js --mode production --env production && docker build -t elliotjreed/www.elliotjreed.com . --no-cache && docker push elliotjreed/www.elliotjreed.com"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free-solid": "^5.1.0-3",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.17",
    "bulma": "^0.9.3",
    "dom-to-image-more": "^2.9.5",
    "history": "^5.2.0",
    "marked": "^4.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.2.1",
    "react-spring": "^9.4.2",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.4.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@hcaptcha/react-hcaptcha": "^1.1.0",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/marked": "^4.0.2",
    "@types/node": "^17.0.14",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.5.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.7",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^2.5.3",
    "postcss": "^8.4.6",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.3.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.6",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-scss": "^4.1.0",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3",
    "webpack-merge": "^5.8.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/tests/stylesMock.ts"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.tsx"
    ],
    "setupFiles": [
      "<rootDir>/tests/setupJest.ts"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!tests/**/*.test.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text"
    ],
    "resetModules": true,
    "restoreMocks": true
  }
}
